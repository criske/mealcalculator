<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/colorPrimary</item>
    </style>

    <style name="AppToolbar">
        <!--<item name="android:elevation" tools:targetApi="lollipop">5dp</item>-->
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!--<item name="android:background">@color/colorPrimaryFaint</item>-->
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:theme">@style/Widget.MaterialComponents.Toolbar</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="AppToolbar.Nav">
        <item name="navigationIcon">@drawable/ic_arrow_back_black_24dp</item>
    </style>

    <style name="TextFoodSectionHeader">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <!-- reference our hint & error styles -->
        <item name="android:textSize">14sp</item>
        <item name="boxBackgroundColor">@android:color/darker_gray</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/holo_blue_dark</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
    </style>

    <style name="TextBoxedAppearance">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="autoSizeMaxTextSize">18sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextBoxedAppearance.RoundRect">
        <item name="android:background">@drawable/round_rectangle</item>
    </style>

    <style name="TextBoxedAppearance.RoundRectNoStroke">
        <item name="android:background">@drawable/round_rectangle_no_stroke</item>
    </style>

    <style name="TextBoxedAppearance.Action" parent="TextBoxedAppearance.RoundRect">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>
